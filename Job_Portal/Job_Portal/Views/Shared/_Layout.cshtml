@using Microsoft.AspNetCore.Identity
@inject SignInManager<Job_Portal.Models.ApplicationUser> SignInManager
@inject UserManager<Job_Portal.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Job Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .search-bar {
            max-width: 600px;
            flex-grow: 1;
        }
        .navbar-dark {
            background-color: #003366;
        }
        .form-control:focus {
            box-shadow: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">
                Job Portal
            </a>

            <form class="d-flex search-bar me-3">
                <input class="form-control me-2" type="search" placeholder="Tìm kiếm việc làm, công ty, kỹ năng" aria-label="Search" />
                <select class="form-select me-2" style="width: 150px;">
                    <option>Hồ Chí Minh</option>
                    <option>Hà Nội</option>
                    <option>Đà Nẵng</option>
                </select>
                <button class="btn btn-warning" type="submit">🔍</button>
            </form>

            <ul class="navbar-nav d-flex flex-row align-items-center">
                <li class="nav-item me-2">
                    <a class="btn btn-outline-light" asp-controller="Category" asp-action="Index">☰ Tất cả danh mục</a>
                </li>
                <li class="nav-item me-2">
                    <a class="btn btn-outline-light" asp-controller="Employer" asp-action="Index">👔 Nhà tuyển dụng</a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    var user = await UserManager.GetUserAsync(User);
                    <li class="nav-item dropdown me-2">
                        <a class="btn btn-outline-light dropdown-toggle" href="#" data-bs-toggle="dropdown">👤 @user.FullName</a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">⚙ Quản lý tài khoản</a></li>
                            <li>
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="dropdown-item">
                                    <button type="submit" class="btn btn-link p-0 text-start">🚪 Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-light" href="#">🔔</a>
                    </li>
                }
                else
                {
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login">🔐 Đăng nhập</a>
                    </li>
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Register">📝 Đăng ký</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-5 mb-2 text-muted">
        <p>&copy; @DateTime.Now.Year - Job Portal</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
