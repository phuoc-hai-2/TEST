@model Job_Portal.Models.JobPosting

@{
    ViewData["Title"] = "Chi tiết công việc";
}

<h2>@Model.Title</h2>

<p><strong>Công ty:</strong> @Model.Company?.Name</p>
<p><strong>Danh mục:</strong> @Model.Category?.Name</p>
<p><strong>Mô tả:</strong> @Model.Description</p>
<p><strong>Ngày đăng:</strong> @Model.PostedDate.ToShortDateString()</p>

@if (User.IsInRole("JobSeeker"))
{
    <form asp-controller="JobApplication" asp-action="Apply" method="post">
        <input type="hidden" name="jobId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Ứng tuyển ngay</button>
    </form>
}
